<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_routing.route_admin_class">Symfony\Cmf\Bundle\RoutingBundle\Admin\RouteAdmin</parameter>
        <parameter key="cmf_routing.redirect_route_admin_class">Symfony\Cmf\Bundle\RoutingBundle\Admin\RedirectRouteAdmin</parameter>
    </parameters>

    <services>

        <service id="cmf_routing.route_admin" class="%cmf_routing.route_admin_class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_routing" label_catalogue="CmfRoutingBundle" label="dashboard.label_routing" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>Symfony\Cmf\Bundle\RoutingBundle\Document\Route</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%cmf_routing.content_basepath%</argument>
            </call>

            <call method="setRouteRoot">
                <argument>%cmf_routing.route_basepath%</argument>
            </call>
        </service>

        <service id="cmf_routing.redirect_route_admin" class="%cmf_routing.redirect_route_admin_class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_routing" label_catalogue="CmfRoutingBundle" label="dashboard.label_redirect_routing" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>Symfony\Cmf\Bundle\RoutingBundle\Document\RedirectRoute</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setRouteRoot">
                <argument>%cmf_routing.route_basepath%</argument>
            </call>
        </service>

    </services>
</container>
