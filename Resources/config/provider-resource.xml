<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_routing.resource.provider.class">Symfony\Cmf\Bundle\RoutingBundle\Resource\ResourceProvider</parameter>
    </parameters>

    <services>

        <service id="cmf_routing.route_provider" class="%cmf_routing.resource.provider.class%">
            <argument type="service" id="cmf_routing.resource.repository" />
        </service>

        <service id="cmf_routing.resource.repository" class="Puli\Repository\Api\ResourceRepository">
            <factory service="cmf_resource.registry" method="get"/>
            <argument>%cmf_routing.resource.repository_name%</argument>
        </service>

    </services>
</container>
